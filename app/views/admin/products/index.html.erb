<div class="container">
    <% if current_user.is_admin? %>
        <%= link_to 'NEW', new_admin_product_path, class: 'btn btn-primary pull-right' %>
    <% end %>
    <table class="table">
      <thead>
      <tr>
        <td>標題</td>
        <td>建立時間</td>
        <td></td>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.title, admin_product_path(product)%></td>
            <td><%= product.created_at.to_s :long %></td>
            <% if current_user.is_admin? %>
                <td><%= link_to 'delete', admin_product_path(product), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure ?' } %></td>
            <% end %>
          </tr>
          </tbody>
      <% end %>
      </table>
  </div>
</div>