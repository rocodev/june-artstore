<!-- simple form -->
<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :title, label: '標題' %>
  <%= f.input :description, label: '產品敘述' %>
  <%= f.input :quantity, label: '數量' %>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>


