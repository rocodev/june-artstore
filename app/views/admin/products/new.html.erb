
<h2 class = "text-center"> 新增商品 </h2>
<%= simple_form_for [:admin, @product] do |f| %>

  <div class = "group">
  	<%= f.label("標題") %>
    <%= f.text_field :title %>
  </div>

  <div class = "group">
  	<%= f.label("敘述") %>
	  <%= f.text_area :description %>
  </div>

  <div class ="group" >
  	<%= f.label("數量") %>
  	<%= f.text_field :quantity %>
  </div>

  <div class="group">
    <%= f.input :photo, as: :file, label: '照片上傳' %> 
  </div>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %> 	
<% end %>
 	